<Window x:Class="DaDaYaRemastered.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DaDaYaRemastered"
        mc:Ignorable="d"
        Title="Главное окно" Height="700" Width="1000" WindowStartupLocation="CenterScreen" Icon="Resources\Cringe House (icon).png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>

        <!--Header-->

        <Grid Grid.Row="0" Background="#FFCFF7FF">
            <Image Source="Resources\Border.png" Stretch="Fill"/>
            <Image Source="Resources\Cringe House.png" HorizontalAlignment="Left" Margin="40 0" VerticalAlignment="Center"/>
            <Label Content="CringeHouse" HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontSize="40" FontWeight="UltraBold" Margin="0 -20 0 0">
                <Label.Foreground>
                    <RadialGradientBrush>
                        <GradientStop Color="#FF06FF00"/>
                        <GradientStop Color="#FF28CDFF" Offset="0.163"/>
                    </RadialGradientBrush>
                </Label.Foreground>
            </Label>
            <Label Content="Агенство недвижимости" HorizontalAlignment="Center" VerticalAlignment="Center" 
                   FontWeight="ExtraBlack" Margin="0 50 0 0 " Foreground="#FF00BAFF"/>
            <RadioButton x:Name="authName" Content="{Binding auth}" 
                         HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0 50 0 0"/>
            <RadioButton x:Name="authRB" HorizontalAlignment="Right" 
                         VerticalAlignment="Center" Margin="0 50 0 0" Visibility="Hidden" Opacity="0"/>
        </Grid>

        <!--Body-->
        <Grid Grid.Row="1"  Background="#FFCFF7FF">
            <TabControl Name="Options" >

                <!--Недвижимость-->
                <TabItem Header="Недвижимость" Name="TabItemEstates" >
                    <Grid Background="AliceBlue">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="39*"/>
                            <RowDefinition Height="284*"/>
                            <RowDefinition Height="179*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="355*"/>
                            <ColumnDefinition Width="609*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock x:Name="estateDescription" Grid.Row="1" Grid.Column="1" Margin="10 1 20 107"
                                   Grid.RowSpan="2" TextWrapping="Wrap" Text="{Binding EstateDescription}"/>

                        <ListView Name="estateList" HorizontalAlignment="Left" Height="256" Margin="10 1 0 0"
                                  VerticalAlignment="Top" Width="339" Grid.Row="1" Grid.Column="0"
                                  SelectionChanged="estateList_SelectionChanged" ItemsSource="{Binding CollectionEstate}" >
                            <ListView.View>
                                <GridView>
                                    <GridView.Columns>
                                        <GridViewColumn Header="Назначение объекта" 
                                                        DisplayMemberBinding="{Binding EstateName}"/>
                                        <GridViewColumn Header="Город" 
                                                        DisplayMemberBinding="{Binding City}"/>
                                        <GridViewColumn Header="Адрес" 
                                                        DisplayMemberBinding="{Binding Adress}"/>
                                        <GridViewColumn Header="Площадь" 
                                                        DisplayMemberBinding="{Binding Square}"/>
                                        <GridViewColumn Header="Цена" 
                                                        DisplayMemberBinding="{Binding Price}"/>
                                        <GridViewColumn Header="Дата постройки" 
                                                        DisplayMemberBinding="{Binding Date}"/>
                                    </GridView.Columns>
                                </GridView>
                            </ListView.View>
                        </ListView>

                        <Label Content="Сортировка объектов" Margin="10,10,210,130" Grid.Row="2" Grid.Column="0" />
                        <ComboBox Margin="160,10,1,140" Grid.Row="2" Name="Sort" VerticalContentAlignment="Center">
                            <ComboBoxItem Name="SortName" Content="по назначению" Selected="SortName_Selected"/>
                            <ComboBoxItem Name="SortCost" Content="по цене" Selected="SortCost_Selected"/>
                            <ComboBoxItem Name="SortYear" Content="по году постройки" Selected="SortYear_Selected" />
                            <ComboBoxItem Name="SortArea" Content="по площади" Selected="SortArea_Selected"/> 
                            <ComboBoxItem Name="SortWithout" Content="без сортировки" Selected="SortWithout_Selected"/>
                        </ComboBox>

                        <Label Content="Город:" Margin="10,60,210,90" Grid.Row="2" Grid.Column="0" />
                        <TextBox Margin="160,60,-5,90" Grid.Row="2" Name="SortCity" VerticalContentAlignment="Center" Grid.Column="0"
                                 SelectionChanged="SortCity_SelectionChanged"/>

                        <Button Name="addEstate" Content="Добавить" Grid.Row="2" Grid.Column="1"
                                Margin="281,130,236,16" Click="addEstate_Click"/>
                        <Button Name="changeEstate" Content="Изменить" Grid.Row="2" Grid.Column="1" 
                                Margin="399,130,118,16" Click="changeEstate_Click"/>
                        <Button Name="deleteEstate" Content="Удалить" Grid.Row="2" Grid.Column="1"
                                Margin="515,130,2,16" Click="deleteEstate_Click"/>
                    </Grid>
                </TabItem>


                <!--Клиенты-->
                <TabItem x:Name="Sell"  Header="Клиенты">
                    <Grid Background="AliceBlue">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="10*"/>
                            <RowDefinition Height="50*"/>
                            <RowDefinition Height="20*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50*"/>
                            <ColumnDefinition Width="50*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Продавцы" Style="{StaticResource blockBottom}" VerticalAlignment="Bottom"/>
                        <TextBlock Grid.Column="1" Text="Покупатели" Style="{StaticResource blockBottom}" VerticalAlignment="Bottom"/>


                        <!--Left-->
                        <ListView x:Name="OwnerList" Grid.Row="1" Margin="10 10 40 10" ItemsSource="{Binding CollectionOwners}">
                            <ListView.View>
                                <GridView>
                                    <GridView.Columns>
                                        <GridViewColumn Header="ФИО продавца" DisplayMemberBinding="{Binding OwnerName}"/>
                                        <GridViewColumn Header="Номер телефона" DisplayMemberBinding="{Binding OwnerTelephone}"/>
                                    </GridView.Columns>
                                </GridView>
                            </ListView.View>
                        </ListView>

                        <!--Right-->
                        <ListView x:Name="BuyerList" Grid.Row="1" Grid.Column="1" Margin="10 10 40 10" ItemsSource="{Binding CollectionBuyers}">
                            <ListView.View>
                                <GridView>
                                    <GridView.Columns>
                                        <GridViewColumn Header="ФИО покупателя" DisplayMemberBinding="{Binding BuyerName}"/>
                                        <GridViewColumn Header="Номер телефона" DisplayMemberBinding="{Binding BuyerTelephone}"/>
                                        <GridViewColumn Header="Назначение объекта" DisplayMemberBinding="{Binding EstateName}"/>
                                    </GridView.Columns>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <Button Name="addBuyer" Content="Добавить" Grid.Row="2"  Click="addBuyer_Click" Grid.Column="1"
                            Margin="70 20 20 20" Style="{StaticResource buttonContracts}"/>
                        <Button Name="changeBuyer" Content="Изменить" Grid.Row="2" Click="changeBuyer_Click" Grid.Column="1"
                            Margin="220 20 20 20" Style="{StaticResource buttonContracts}"/>
                        <Button Name="deleteBuyer" Content="Удалить" Grid.Row="2" Click="deleteBuyer_Click" Grid.Column="1"
                            Margin="370 20 20 20" Style="{StaticResource buttonContracts}"/>
                    <Button x:Name="changeOwner" Content="Изменить" Grid.Row="2"  Click="changeOwner_Click"
                            Margin="-220 20 20 20" Style="{StaticResource buttonContracts}"/>
                    <Button x:Name="deleteOwner" Content="Удалить" Grid.Row="2" Click="deleteOwner_Click"
                            Margin="-370 20 20 20" Style="{StaticResource buttonContracts}"/>
                    </Grid>

                </TabItem>

                <!--Договоры-->
                <TabItem x:Name="Treties" Header="Договоры">
                    <Grid Background="AliceBlue">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="90*"/>
                            <RowDefinition Height="10*"/>
                        </Grid.RowDefinitions>
                        <ListView x:Name="TretiesList" Margin="1 10 1 1" ItemsSource="{Binding Treties}"
                                  SelectionChanged="TretiesList_SelectionChanged" Grid.ColumnSpan="2">
                            <ListView.View>
                                <GridView>
                                    <GridView.Columns>
                                        <GridViewColumn Header="Номер договора" x:Name="numberTreat" Width="100" DisplayMemberBinding="{Binding Id}"/>
                                        <GridViewColumn Header="Дата заключения" Width="100" DisplayMemberBinding="{Binding DataAccept}"/>
                                        <GridViewColumn Header="Покупатель" Width="100" DisplayMemberBinding="{Binding Buyer}"/>
                                        <GridViewColumn Header="Продавец" Width="100" DisplayMemberBinding="{Binding Consumer}"/>
                                        <GridViewColumn Header="Цена" Width="100" DisplayMemberBinding="{Binding Price}"/>
                                        <GridViewColumn Header="Объект недвижимости"  Width="500" DisplayMemberBinding="{Binding EstateName}"/>
                                    </GridView.Columns>
                                </GridView>
                            </ListView.View>
                        </ListView>


                        <Grid Grid.Row="1">
                            <Button x:Name="B" Content="Удалить" VerticalAlignment="Bottom" HorizontalAlignment="Right"
                                    Style="{StaticResource buttonContracts}"/>
                            <Button x:Name="sB" Content="" VerticalAlignment="Bottom" HorizontalAlignment="Right"
                                    Style="{StaticResource buttonContracts}" Margin="10 10 90 10"/>
                        </Grid>
                    </Grid>
                </TabItem>


            </TabControl>
        </Grid>

        <!--Bottom-->
        <Grid Grid.Row="2"  Background="#FFCFF7FF">
            <TextBlock Text="Тех. поддержка 8-900-222-43-54" Style="{StaticResource blockBottom}" />
        </Grid>
    </Grid>
</Window>
